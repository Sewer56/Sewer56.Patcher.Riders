<default:ReloadedWindow x:Class="Sewer56.Patcher.Riders.Dialogs.ProtagBox"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:default="clr-namespace:Reloaded.WPF.Theme.Default;assembly=Reloaded.WPF.Theme.Default"
                        mc:Ignorable="d"
                        MinHeight="10"
                        MinWidth="10"
                        SizeToContent="WidthAndHeight"
                        MaxHeight="870"
                        MaxWidth="700"
                        WindowStartupLocation="CenterOwner"
                        Style="{DynamicResource ReloadedWindow}">
    <ScrollViewer>
        <Grid Margin="{DynamicResource PanelMargin}">
            <StackPanel>
                <Image x:Name="Banner"
                       Style="{DynamicResource HighQualityImage}"
                       MaxWidth="500"
                       StretchDirection="Both"
                       Margin="{DynamicResource BannerMargin}"/>

                <TextBlock TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Top"
                           x:Name="Message"
                           Style="{DynamicResource RIIDefaultTextBlock}"
                           Margin="{DynamicResource CommonItemVerticalMargin}">
                    This is a sample message.<LineBreak/>
                    It may or may not be important.
                </TextBlock>

                <Button Content="OK" PreviewMouseDown="Button_PreviewMouseDown"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</default:ReloadedWindow>